<form action="/api/product/{{products._id}}?_method=PUT" method="POST"> 
<input type="hidden" name="_method" value="PUT"> 

    <div class="form-group">
        <label for="_id">ID</label>
        <input type="text" class="form-control" disable value="{{products._id}}" name="_id">
    </div>

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" value="{{products.name}}" name="name" >
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" value="{{products.price}}"  name="price">
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="category" name="category">
            <option selected>{{products.category}}</option>
            <option>Computers</option>
            <option>Phones</option>
            <option>Accesories</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" value="{{products.description}}"  name="description">
    </div>
    <div class="form-group">
        <label for="picture">Picture</label>
        <input type="text" class="form-control" value="{{products.picture}}"  name="picture">
    </div>
    <button type="submit" class="btn btn-primary">Modificar</button>


    <button type="submit" formaction="/api/product/{{products._id}}?_method=delete" method="POST" class="btn btn-primary">Eliminar</button>


    <a href="/api/product" class="btn btn-info" role="button">Cancelar</a>

</form>