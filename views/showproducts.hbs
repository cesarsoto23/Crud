<div class="container-fluid">
<div class="row">
    <div class="col-2"></div>
    <div class="col-8" style="align-content: center;">
      

<table id="myTable" class="table table-stripped table-responsive-md btn-table">

    <thead>
        <tr>
            <th>ID</th>
            <th class="th-sm">Name</th>
            <th class="th-sm">Price</th>
            <th class="th-sm">Picture</th>
            <th class="th-sm">Category</th>
            <th class="th-sm">Description</th>
            <th class="th-sm">Options</th>
        </tr>

    </thead>

   
    <tbody>

        {{#products}}

        <tr>
              <br>
              <td>{{_id}}</td>  
              <td>{{name}}</td>
              <td>{{price}}</td>
              <td>{{picture}}</td>
              <td>{{category}}</td>
              <td>{{description}}</td>
              <td>
                <form action="/api/product/{{_id}}" method="GET">

                <button type="submit" class="btn btn-primary" >Editar</button>
                </form>

              </td>

              <td>
                <form action="/api/product/{{_id}}" method="GET">

                <button type="submit" class="btn btn-primary" >Eliminar</button>
                </form>

              </td>
        </tr>
        {{/products}}
    </tbody>


</table>
    </div>
    <div class="col-2"></div>
</div>
   </div>
